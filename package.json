{
  "name": "bga.terraformingmars",
  "version": "1.0.0",
  "description": "",
  "main": "terraformingmars.js",
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build:scss": "sass --no-source-map src/css/GameXBody.scss terraformingmars.css",
    "watch:scss": "sass --watch  src/css/GameXBody.scss terraformingmars.css",
    "watch": "npm run watch:ts && npm run watch:scss",
    "build": "npm run build:ts && npm run build:scss && npm run build:material",
    "test": "XDEBUG_MODE=off APP_GAMEMODULE_PATH=~/git/bga-sharedcode/misc/ phpunit --display-deprecations --display-warnings  --bootstrap modules/_autoload.php --colors=always modules/tests",
    "predeploy": "APP_GAMEMODULE_PATH=~/git/bga-sharedcode/misc/ php8.4  modules/_testpredeploy.php",
    "build:material": "php8.4 ./misc/other/genmat.php misc/*.csv",
    "remove:colonies": "node ./misc/other/genoptions.js -remove 108",
    "add:colonies": "php8.4 ./misc/other/genmat.php misc/colo_material.csv && node ./misc/other/genoptions.js",
    "jstest": "TS_NODE_PROJECT=tests/tsconfig.test.json mocha -r ts-node/register tests/**/*.spec.ts",
    "end": "echo The End"
  },
  "author": "VictoriaLa",
  "license": "EPL2.0",
  "devDependencies": {
    "@prettier/plugin-php": "^0.22",
    "@types/chai": "^4.x.x",
    "@types/mocha": "^10.0.10",
    "@types/node": "^10.9.2",
    "@types/sinon": "^10.x.x",
    "chai": "^4.x.x",
    "jsdom": "^20.0.0",
    "mocha": "^10.x.x",
    "prettier": "^3.6",
    "sass": "^1.32.6",
    "sinon": "^15.x.x",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-php"
    ],
    "braceStyle": "1tbs",
    "printWidth": 140,
    "trailingComma": "none"
  }
}
